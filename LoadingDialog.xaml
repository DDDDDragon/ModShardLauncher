<Window x:Class="ModShardLauncher.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        mc:Ignorable="d" Height="150" Width="400" 
        WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize"
        WindowStyle="None">
    <Grid Background="#1B1926" RenderOptions.BitmapScalingMode="NearestNeighbor">
        <Border BorderBrush="#43424D" BorderThickness="2"/>
        <Label Content="{DynamicResource Loading}" Style="{StaticResource xFont}" 
               Foreground="#95796A" VerticalAlignment="Top" HorizontalAlignment="Center"
               Margin="0,100,0,0"/>
        <Image gif:AnimationBehavior.SourceUri="/Resources/icon.gif"
               Height="42" Width="36" VerticalAlignment="Top" Margin="0,40,0,0"/>
    </Grid>
</Window>